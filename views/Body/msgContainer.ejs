<div class="flex flex-col gap-7 mt-4">
    <% for( let i = 0; i < msgs.length; i++ ) { %>
        <div class="border-2 mx-auto w-96 p-4 text-white bg-indigo-600 rounded-2xl shadow-2xl hover:shadow-black">
            <h3>user : <%= msgs[i].user %></h3>
            <p>message: <%= msgs[i].text %></p>
            <div class="text-right">
                <a href="/message/<%= i %>" class="hover:border-2 border-white hover:p-2 ">view detail</a>
            </div>
            
        </div>
    <% } %>

</div>